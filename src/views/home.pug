doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Noom
        main 
            div#welcome
                form
                    label(for="ipt-roomName") Room Name
                    input#ipt-roomName(placeholder="enter the room name", required, type="text")
                    label(for="ipt-nickname") NickName 
                    input#ipt-nickname(placeholder="nickname", required, type="text")
                    button Enter Room
            div#room
                h3#root-title
                ul 
                form#name
                    input(placeholder="nickname", required, type="text")
                    button Change    
                form#msg
                    input(placeholder="message", required, type="text")
                    button Send
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js")